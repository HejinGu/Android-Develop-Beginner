<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/defaultConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".RecyclerViewActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="消息"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fans"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:src="@mipmap/fans"
        android:onClick="myOnClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="粉丝"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="55dp"
        app:layout_constraintTop_toBottomOf="@id/fans"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/likes"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="80dp"
        android:src="@mipmap/likes"
        android:onClick="myOnClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赞"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="155dp"
        app:layout_constraintTop_toBottomOf="@id/likes"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/notice"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="80dp"
        android:src="@mipmap/touchme"
        android:onClick="myOnClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@我的"
        android:textColor="@color/colorBlack"
        android:layout_marginRight="143dp"
        app:layout_constraintTop_toBottomOf="@id/notice"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="80dp"
        android:src="@mipmap/comments"
        android:onClick="myOnClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论"
        android:textColor="@color/colorBlack"
        android:layout_marginRight="55dp"
        app:layout_constraintTop_toBottomOf="@id/comment"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333333"
        android:layout_marginTop="150dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>